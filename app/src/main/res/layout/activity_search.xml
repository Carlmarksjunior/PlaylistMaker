<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorSecondary">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/backButtonInSearch"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:backgroundTint="?attr/colorSecondary"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            app:icon="@drawable/ic_back_arrow_24"
            app:iconTint="?attr/colorOnPrimary"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="@dimen/well_textSize"
            android:layout_marginTop="2dp"
            android:textStyle="normal"
            android:layout_marginStart="12dp"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/ys_display_medium"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_corner_radius_16"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/edit_text_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/marginSettings"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:background="@drawable/background_corner_radius_16"
            android:drawableLeft="@drawable/ic_search_16"
            android:drawablePadding="8dp"
            android:drawableTint="@color/gray"
            android:fontFamily="@font/ys_display_regular"
            android:hint="@string/search"
            android:inputType="text"
            android:maxLines="1"
            android:paddingStart="12dp"
            android:textColor="@color/blackYP"
            android:textColorHint="@color/gray" />
        <ImageView
            android:id="@+id/clearIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_clear_16"
            android:visibility="gone"
            android:layout_marginEnd="10dp"/>
    </LinearLayout>


    </LinearLayout>
