<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/colorPrimary">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_marginTop="14dp"
        android:layout_marginHorizontal="@dimen/marginSettings"
        android:textColor="@color/white"
        android:textSize="@dimen/well_textSize"
        android:fontFamily="@font/ys_display_medium"
        >
    </TextView>

    <Button
        android:id="@+id/searchButton"
        style="@style/mainButton"
        android:layout_marginTop="24dp"
        android:text="@string/search"
        app:icon="@drawable/ic_search_24"/>
    <Button
        android:id="@+id/mediaButton"
        style="@style/mainButton"
        android:layout_marginTop="16dp"
        android:text="@string/media"
        app:icon="@drawable/ic_media_24"/>

    <Button
        android:id="@+id/settingButton"
        style="@style/mainButton"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="28dp"
        android:text="@string/settings"
        app:icon="@drawable/ic_settings_24" />
</LinearLayout>