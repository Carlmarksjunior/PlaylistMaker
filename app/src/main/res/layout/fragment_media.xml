<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.media.fragments.MediaFragment"
    android:background="@color/placeholderText">

    <TextView
        android:id="@+id/mediaTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/marginTop14"
        android:layout_marginStart="@dimen/marginSettings"
        android:text="@string/media"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="@dimen/well_textSize"
        android:textStyle="normal"
        android:layout_gravity="center"
        android:fontFamily="@font/ys_display_medium"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/mediaTv"
        app:layout_constraintStart_toStartOf="@id/main"
        android:layout_marginTop="@dimen/marginSettings"
        app:tabTextColor="@color/placeholderBack"
        app:tabIndicatorColor="@color/placeholderBack"
        app:tabTextAppearance="@style/textOnTabLayoutMedia"
        app:tabMode="fixed"
        android:background="@color/placeholderText" />
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tabLayout"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintEnd_toEndOf="@id/main"
        app:layout_constraintBottom_toBottomOf="@id/main"/>

</androidx.constraintlayout.widget.ConstraintLayout>