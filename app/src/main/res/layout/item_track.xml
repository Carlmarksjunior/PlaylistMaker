<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:layout_marginTop="100dp"
    android:layout_height="61dp"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/paddingLeftTrack"
    android:paddingTop="@dimen/paddingTopBottomTrack"
    android:paddingBottom="@dimen/paddingTopBottomTrack"
    android:paddingRight="@dimen/paddingRightTrack"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackgroundBorderless">
    <ImageView
        android:id="@+id/artSong"
        android:layout_width="45dp"
        android:layout_height="45dp"
        tools:src = "@drawable/ic_launcher_background"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_gravity="center_vertical">
        <TextView
            android:id="@+id/trackName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Smells Like Teen Spirit"
            android:maxLines="1"
            android:ellipsize="end"
            android:fontFamily="@font/ys_display_regular"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="@dimen/medium_textSize"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/artistName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                tools:text="Nirvana"
                style="@style/TrackTv"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_point_13"/>
            <TextView
                android:id="@+id/trackTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                tools:text="5:01"
                style="@style/TrackTv"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_charge_24"
        android:layout_gravity="center_vertical"/>
</LinearLayout>