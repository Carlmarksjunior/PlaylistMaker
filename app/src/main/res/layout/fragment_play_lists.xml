<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.media.fragments.PlayListFragment"
    android:backgroundTint="?attr/colorOnSecondary">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/newPlayListButtom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintTop_toTopOf="@id/main"
        app:layout_constraintEnd_toEndOf="@id/main"
        android:layout_marginTop="@dimen/marginTop"
        android:text="@string/newPlayList"
        android:textSize="@dimen/smallTextSize14"
        android:textAllCaps="false"
        android:fontFamily="@font/ys_display_medium"
        android:background="@drawable/background_corner_radius_54"
        android:textColor="@color/placeholderText"
        app:backgroundTint="?attr/colorOnPrimary"/>

    <ImageView
        android:id="@+id/media_image_place_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintTop_toBottomOf="@id/newPlayListButtom"
        app:layout_constraintEnd_toEndOf="@id/main"
        android:layout_marginTop="@dimen/marginTop46"
        android:src="@drawable/ic_not_search_result_120"
        android:visibility="visible" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintTop_toBottomOf="@id/media_image_place_holder"
        app:layout_constraintEnd_toEndOf="@id/main"
        android:layout_marginTop="@dimen/marginSettings"
        android:text="@string/playListIsEmpty"
        android:gravity="center"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="@dimen/textSizePlaceHolder"
        android:fontFamily="@font/ys_display_medium"/>

</androidx.constraintlayout.widget.ConstraintLayout>