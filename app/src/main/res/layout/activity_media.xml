<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.media.activity.MediaActivity">
    <Button
        android:id="@+id/mediaBackButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintTop_toTopOf="@id/main"
        android:layout_marginStart="@dimen/margin4"
        android:layout_marginTop="@dimen/margin4"
        android:backgroundTint="?attr/colorSecondary"
        app:icon="@drawable/ic_back_arrow_24"
        app:iconTint="?attr/colorOnPrimary"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/mediaBackButton"
        app:layout_constraintTop_toTopOf="@id/main"
        android:layout_marginTop="@dimen/smallTextSize14"
        android:layout_marginStart="@dimen/marginTop12"
        android:text="@string/media"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="@dimen/well_textSize"
        android:textStyle="normal"
        android:layout_gravity="center"
        android:fontFamily="@font/ys_display_medium"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/mediaBackButton"
        app:layout_constraintStart_toStartOf="@id/main"
        android:layout_marginTop="@dimen/margin4"
        app:tabTextColor="@color/placeholderBack"
        app:tabIndicatorColor="@color/placeholderBack"
        app:tabTextAppearance="@style/textOnTabLayoutMedia"
        app:tabMode="fixed" />
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tabLayout"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintEnd_toEndOf="@id/main"
        app:layout_constraintBottom_toBottomOf="@id/main"/>

</androidx.constraintlayout.widget.ConstraintLayout>