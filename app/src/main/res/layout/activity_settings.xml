<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/colorSecondary">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:backgroundTint="?attr/colorSecondary"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            app:icon="@drawable/ic_back_arrow_24"
            app:iconTint="?attr/colorOnPrimary"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="@dimen/well_textSize"
            android:textStyle="normal"
            android:layout_marginStart="12dp"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/ys_display_medium"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTop"
        android:weightSum="1">
        <TextView
            style="@style/settingTv"
            android:text="@string/dark_theme" />
        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:gravity="center"
            app:trackTint="?attr/colorOnSecondary"
            app:thumbTint="?attr/colorSecondaryVariant"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:weightSum="1">
        <TextView
            style="@style/settingTv"
            android:text="@string/share_app" />

        <Button
            style="@style/settingButton"
            android:padding="4dp"
            app:icon="@drawable/ic_share_24" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_marginTop="@dimen/marginTop">
        <TextView
            style="@style/settingTv"
            android:text="@string/write_to_support"/>

        <Button
            style="@style/settingButton"
            android:padding="2dp"
            app:icon="@drawable/ic_support_24"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTop"
        android:weightSum="1">
        <TextView
            style="@style/settingTv"
            android:text="@string/user_argeement" />
        <Button
            style="@style/settingButton"
            android:padding="8dp"
            app:icon="@drawable/ic_charge_24" />
    </LinearLayout>
</LinearLayout>




